        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSportskaRadnja.Forme"
        mc:Ignorable="d"
        Title="Dodaj/izmeni kategoriju" Height="160" Width="260">
    <Grid>
        <Label Name="lblKategorija" Content="Kategorija" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtKategorija" HorizontalAlignment="Left" Height="23" Margin="88,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Button Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Width="223" Click="btnSacuvaj_Click"  />
        <Button Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="223" Click="btnOtkazi_Click" />
    </Grid>
</Window>
